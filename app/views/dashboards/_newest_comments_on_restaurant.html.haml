- comments = @restaurant.comments.without_dish.without_survey.newest
.newest_comments_on_dishes.span6
  .widget-box
    .widget-header
      %h4.lighter.smaller
        %i.icon-comment.blue
        Nuevos comentarios en restaurante
      .widget-toolbar
        %a{href: '#', 'data-action' => 'reload'}
          %i.icon-refresh
        %a{href: '#', 'data-action' => 'collapse'}
          %i.icon-chevron-up
    .widget-body
      .widget-main.no-padding
        - if comments.nil?
          %p No hay bastantes datos
        - else
          .dialogs
            - comments.each do |c|
              .itemdiv.dialogdiv
                .user
                  = image_tag(@restaurant.chain.logo(:medium) || 'default_dish.png')
                .body
                  .time
                    - stars_num = c.rating.nil? ? 0 : c.rating.to_i
                    - stars_num.times do
                      %i.icon-star.orange
                    %span &nbsp;
                    %i.icon-time
                    %span= distance_of_time_in_words_to_now(c.created_at)
                  .name
                    = c.name.nil? ? 'anonimo' : c.name
                  .text
                    - if c.description.nil?
                      ""
                    - else
                      %i.icon-quote-left
                      = c.description
