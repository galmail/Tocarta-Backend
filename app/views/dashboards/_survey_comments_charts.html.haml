- surveys = SurveyQuestion.by_restaurant(@restaurant.id)
.survey_comments_charts.infobox-container.span6
  .widget-box
    .widget-header
      %h4.lighter.smaller
        %i.icon-comment.blue
        ValoraciÃ³n del Cuestionario
      .widget-toolbar
        %a{href: '#', 'data-action' => 'collapse'}
          %i.icon-chevron-up
    .widget-body
      .widget-main.no-padding
        - if surveys.blank?
          %p No hay bastantes datos
        - else
          - surveys.each do |sq|
            .infobox.infobox-orange2.full_width
              .infobox-chart
                %span.sparkline{'data-values' => sq.newest_comments_by_restaurant_to_values(@restaurant.id).join(',')}
              .infobox-data
                %span.infobox-data-number= sprintf( "%5.2f", sq.rating )
                .infobox-content= sq.description
              - diff = sq.last_week_rating_diff(@restaurant.id)
              - if diff > 0
                .badge.badge-success
                  = number_to_percentage(diff, precision: 1)
                  %i.icon-arrow-up
              - if diff < 0
                .badge.badge-important
                  = number_to_percentage(diff, precision: 1)
                  %i.icon-arrow-down
              - if diff == 0
                .badge.badge-warning
                  = number_to_percentage(diff, precision: 1)
                  %i.icon-arrow-right

