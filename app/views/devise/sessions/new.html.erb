<div class="login_view">
	<div class="tcLogo"></div>
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div><%= f.label :email %><br />
	  <%= f.email_field :email, :class => "input" %></div>
	
	  <div><%= f.label :password %><br />
	  <%= f.password_field :password, :class => "input" %></div>
	
	  <% if devise_mapping.rememberable? -%>
	    <div class="rememberme"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
	  <% end -%>
	
	  <div class="submit"><%= f.submit "Sign in" %></div>
	<% end %>
	
	<%= render "links" %>
</div>